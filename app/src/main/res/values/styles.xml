<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme.Widgets.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="chipMinHeight">32dp</item>
        <item name="chipStartPadding">16dp</item>
        <item name="chipEndPadding">16dp</item>
        <item name="chipBackgroundColor">@color/category_background_color</item>
        <item name="rippleColor">?colorControlHighlight</item>
        <item name="android:minWidth">56dp</item>
    </style>

    <style name="AppTheme.Widgets.BaseChipGroup" parent="Widget.MaterialComponents.ChipGroup">
        <item name="android:layout_gravity">start</item>
        <item name="chipSpacing">8dp</item>
    </style>
</resources>
